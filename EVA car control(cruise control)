using System;
using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using System.IO;
using System.Linq;

public class CarController : MonoBehaviour
{
    public float control = 3.6f;
    public Rigidbody Mycar;
    private static float time = 0f;
    private float time2 = 0f;
    private static float speed = 0f;
    static bool check = false;
    static bool check2 = false;
    public GameObject EVACAR;
    static double sum;
    static float zOld = 0;
    static float xOld = 0;
    //static float timeOld 

    private float horizontalInput;
    private float horizontalInput2;
    private float horizontalInput3;

    private float verticalInput;
    private float currentSteerAngle;
    private float currentbreakForce;
    private bool isBreaking;

    [SerializeField] private float motorForce;
    [SerializeField] private float breakForce;
    [SerializeField] private float maxSteerAngle;
    [SerializeField] private float midSteerAngle;
    [SerializeField] public float minSteerAngle;


    [SerializeField] private WheelCollider frontLeftWheelCollider;
    [SerializeField] private WheelCollider frontRightWheelCollider;
    [SerializeField] private WheelCollider rearLeftWheelCollider;
    [SerializeField] private WheelCollider rearRightWheelCollider;

    [SerializeField] private Transform frontLeftWheelTransform;
    [SerializeField] private Transform frontRightWheeTransform;
    [SerializeField] private Transform rearLeftWheelTransform;
    [SerializeField] private Transform rearRightWheelTransform;

    private void FixedUpdate()
    {
        GetInput();

        verticalInput = Input.GetAxis("Vertical");
        Vector3 position = GameObject.Find("EVACAR").transform.position;

        // speed = 10;
        speed = Mycar.velocity.magnitude * control;
        //string speed2 = speed.ToString("0.##");

        string path5 = Application.dataPath + "/message/" + "deneme_z" + ".txt";
        string path3 = Application.dataPath + "/message/" + "pozisyon" + ".txt";
        string path = Application.dataPath + "/message/" + "hız" + ".txt";
        string path2 = Application.dataPath + "/message/" + "zaman" + ".txt";
        string path4 = Application.dataPath + "/message/" + "deneme_x" + ".txt";
        string path6 = Application.dataPath + "/message/" + "yer değiştirme" + ".txt";

        string content5 = position.z.ToString() + "\n";
        string content4 = position.x.ToString() + "\n";

        float z = float.Parse(content5);
        float x = float.Parse(content4);
        
        if (check2 == true && time > 0.02)
        {
            sum += Math.Sqrt(((z - zOld) * (z - zOld)) + ((x - xOld) * (x - xOld)));
        }else if(check2 == false)
        {
            check2 = true;
        }
        
        //string content3 = position.ToString() + "\n";
        Debug.Log(Math.Sqrt(16));
        string content6 = sum.ToString()+ "\n";
        string content2 = time + "\n";
        //string content =  + "\n";
        //string content6 =  + "\n";
        


        //File.AppendAllText(path, content);
        File.AppendAllText(path2, content2);
        //File.AppendAllText(path3, content3);  // position
        File.AppendAllText(path4, content4);
        File.AppendAllText(path5, content5);  //
        File.AppendAllText(path6, content6);  // distance


       // all file path should exist in unity as .txt  

        HandleMotor();
        HandleSteering();
        UpdateWheels();

       
         zOld = z;
         xOld = x;
        

        //timeOld = time;
    }
    private void GetInput()
    {
        horizontalInput = Input.GetAxis("Horizontal");
        horizontalInput2 = Input.GetAxis("Horizontal2");
        horizontalInput3 = Input.GetAxis("Horizontal3");

        verticalInput = Input.GetAxis("Vertical");
        isBreaking = Input.GetKey(KeyCode.Space);
    }

    private void HandleMotor()
    {
        rearLeftWheelCollider.motorTorque = verticalInput * motorForce * 2.6f;
        rearRightWheelCollider.motorTorque = verticalInput * motorForce * 2.6f;
        currentbreakForce = isBreaking ? breakForce : 0f;
        ApplyBreaking();
        /*
        if (speed >= 5.01 && verticalInput == 0)
        {
            ApplyBreaking2();
            // HandleSteering2();
            check = true;
        }
        else if (speed <=4.99)
        {
         //   HandleSteering2();
            rearLeftWheelCollider.motorTorque =  motorForce * 4.4f;
            rearRightWheelCollider.motorTorque =  motorForce * 4.4f;
        }
        if(check == true)
        {
            time += Time.deltaTime;
        }*/

        if (speed >= 30.2 && verticalInput == 0)
        {
            ApplyBreaking2();
            // HandleSteering2();
            check = true;
        }
        else if (speed <= 29.8)
        {
            //   HandleSteering2();
            rearLeftWheelCollider.motorTorque = motorForce * 2.6f;
            rearRightWheelCollider.motorTorque = motorForce * 2.6f;
        }
        if (check == true)
        {
            time += Time.deltaTime;
        }

    }
    private void ApplyBreaking2()
    {
        frontRightWheelCollider.brakeTorque = currentbreakForce;
        frontLeftWheelCollider.brakeTorque = currentbreakForce;
        rearLeftWheelCollider.brakeTorque = currentbreakForce;
        rearRightWheelCollider.brakeTorque = currentbreakForce;
    }
    private void ApplyBreaking()
    {
        frontRightWheelCollider.brakeTorque = currentbreakForce * 2.4f;
        frontLeftWheelCollider.brakeTorque = currentbreakForce * 2.4f;
        rearLeftWheelCollider.brakeTorque = currentbreakForce * 2.4f;
        rearRightWheelCollider.brakeTorque = currentbreakForce * 2.4f;
    }
    private void HandleSteering()
    {
        currentSteerAngle = 0;
        if (Input.GetKey(KeyCode.Q) || Input.GetKey(KeyCode.E))   
        {
            currentSteerAngle = maxSteerAngle * horizontalInput;
        }else if(Input.GetKey(KeyCode.A) || Input.GetKey(KeyCode.D))
        {
            currentSteerAngle = midSteerAngle * horizontalInput2;
        }
        else if(Input.GetKey(KeyCode.Z) || Input.GetKey(KeyCode.C))
        {
            currentSteerAngle = minSteerAngle * horizontalInput3;
        }
        frontLeftWheelCollider.steerAngle = currentSteerAngle ;
        frontRightWheelCollider.steerAngle = currentSteerAngle;
       
    }
    
    private void UpdateWheels()
    {
        UpdateSingleWheel(frontLeftWheelCollider, frontLeftWheelTransform);
        UpdateSingleWheel(frontRightWheelCollider, frontRightWheeTransform);
        UpdateSingleWheel(rearRightWheelCollider, rearRightWheelTransform);
        UpdateSingleWheel(rearLeftWheelCollider, rearLeftWheelTransform);
    }

    private void UpdateSingleWheel(WheelCollider wheelCollider, Transform wheelTransform)
    {
        Vector3 pos;
        Quaternion rot;
        wheelCollider.GetWorldPose(out pos, out rot);
        wheelTransform.rotation = rot;
        wheelTransform.position = pos;
    }
}
